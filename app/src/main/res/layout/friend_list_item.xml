<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="2dp"
    android:background="#426"
    >


    <ImageView
        android:id="@+id/volunteer_image"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:src="@drawable/volunteer"

        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/volunteer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Milan Tončić"
            android:gravity="center"
            android:textSize="20dp"
            android:textAlignment="gravity"
            android:textColor="#fff"
            />

        <TextView
            android:id="@+id/volunteer_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3525 points"
            android:gravity="center"
            android:textSize="15dp"
            android:textAlignment="gravity"
            android:textColor="#fff"
            />

        <TextView
            android:id="@+id/volunteer_rank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rank: Divine Helper"
            android:gravity="center"
            android:textSize="15dp"
            android:textAlignment="gravity"
            android:textColor="#fff"
            />


    </LinearLayout>
</LinearLayout>